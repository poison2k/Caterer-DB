@using Caterer_DB.Resources
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @section Scripts{
        $('#topnavbar').affix({
        offset: {
        top: $('#banner').height()
        }
        });
    }
</head>
<body>

    <div class="navbar  navbar-fixed-top" id="topnavbar">
        <div class="container" id="banner">
            <div class="row">
                <img class="img-responsive" src="~/Content/Images/banner.png" />
            </div>
        </div>
        <div class="navbar-default">


            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Start", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", id = "StartButton" })
                </div>
                <div class="navbar-collapse collapse">
                    @if (Request.IsAuthenticated)
                    {

                        if (User.HatDasRecht(RechteResource.MenueCaterer))
                        {
                            <ul class="nav navbar-nav">
                                <li class="dropdown" , id="DropdownServiceLogout">
                                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                        Caterer<b class="caret"></b>
                                    </a>                                                                                             
                                    <ul class="dropdown-menu">
                                        <li>@Html.ActionLink("Caterer anzeigen", "IndexCaterer", "Benutzer", null, new { id = "DropdownAGBLogout" })</li>                                     
                                    </ul>

                                </li>

                            </ul>
                        }
                    }
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div class="spacer">
            &nbsp;
        </div>

        <div class="mybg">
            @RenderBody()
        </div>

        <hr />
        <footer>
            <div class="row bg-white">
                <div class="col-md-4">
                    <img class="center-block" src="~/Content/Images/Logo_Ministerium.png" />
                </div>
                <div class="col-md-4">
                    <ul class="navbar nav nav-justified">
                        <li><a href="/Home/AGB" id="AGB">AGB</a></li>
                        <li><a href="/Home/Datenschutz" id="Datenschutz">Datenschutz</a></li>
                        <li><a href="/Home/Contact" id="Kontakt">Kontakt</a></li>
                        <li><a href="/Home/Impressum" id="Impressum">Impressum</a></li>
                    </ul>
                </div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
