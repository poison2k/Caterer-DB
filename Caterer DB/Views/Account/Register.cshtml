@model Caterer_DB.Models.RegisterViewModel
@{
    ViewBag.Title = "Registrierung";
}

<br />
<br />
<br />
<br />

<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4 text-center">
        <h3>Registrierung</h3>
        <div class="col-md-4"></div>
    </div>
</div>
<br />

<section id="loginForm">
   @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
        @Html.AntiForgeryToken()

        <div class="col-md-4 col-md-offset-4">

            <div class="form-group">
                <div class="input-group input-group">
                    <span class="input-group-addon"><i style="font-size:25px;" class="glyphicon glyphicon-user "></i></span>
                    <div class="icon-addon addon">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "E-Mail" })
                    </div>
                </div>           
            </div>
        </div>
        <br />
        <br />
        <br />
        <div class="col-md-4 col-md-offset-4">
            <div class="form-group">
                <div class="input-group input-group">
                    <span class="input-group-addon"><i style="font-size:25px;" class="glyphicon glyphicon-lock"></i></span>
                    <div class="icon-addon addon-sm">
                       @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Passwort" })
                    </div>
                </div>               
            </div>
        </div>
        <br />
        <br />
        <br />   
            <div class="col-md-4 col-md-offset-4">
                <div class="form-group">
                    <div class="input-group input-group">
                        <span class="input-group-addon"><i style="font-size:25px;" class="glyphicon glyphicon-lock"></i></span>
                        <div class="icon-addon addon-sm">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Passwort wiederholen" })
                        </div>
                    </div>
                    <div class="text-center">
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <br />
            <br />
            <br />
            <div class="row">
                <div class="col-md-5"></div>
                <div type="button" class="col-md-2 text-center"><input type="submit" class="btn btn-primary btn-block btn-xs" value="Register" /></div>

                <div class="col-md-5"></div>
            </div>
            }
</section>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

















