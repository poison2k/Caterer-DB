<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Start", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                   
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div class="mybg">
            @RenderBody()
        </div>





        <hr />
        <footer>
            <div class="row">

                <div class="col-md-4">
                    <img class="img-responsive" src="~/Content/Images/Logo_Ministerium.png" />
                </div>


                <div class="col-md-4">

                    <ul class="navbar nav nav-justified">
                        <li>@Html.ActionLink("AGB", "AGB", "Home")</li>
                        <li>@Html.ActionLink("Datenschutz", "Datenschutz", "Home")</li>
                        <li>@Html.ActionLink("Kontakt", "Contact", "Home")</li>
                        <li>@Html.ActionLink("Impressum", "Contact", "Home")</li>
                    </ul>
                </div>
                <div class="col-md-4">

                </div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
