@using Caterer_DB.Models
@model DetailsBenutzerViewModel

@{
    ViewBag.Title = "Details";
}
<br />
<br />
<br />
<div class="row">
    <div id="RegSeite" class="col-md-6 col-md-offset-3 text-center">
        <h1>Detailansicht Mitarbeiter</h1>
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="row">
            <div class="col-md-12">
                <div class="well well-lg">
                    <div>
                        <dl class="dl-horizontal text-center">
                          
                            <dt>
                                @Html.DisplayNameFor(model => model.Anrede)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Anrede)
                            </dd>
                            <br />
                            <dt>
                                @Html.DisplayNameFor(model => model.Vorname)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Vorname)
                            </dd>
                            <br />
                            <dt>
                                @Html.DisplayNameFor(model => model.Nachname)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Nachname)
                            </dd>
                            </br>                                                   
                            <dt>
                                @Html.DisplayNameFor(model => model.Telefon)
                            </dt>
                            
                            <dd>
                                @Html.DisplayFor(model => model.Telefon)
                            </dd>
                            </br>
                            <dt>
                                E-@Html.DisplayNameFor(model => model.Mail)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Mail)
                            </dd>
                            <br />
                            <dt>
                                @Html.DisplayNameFor(model => model.IstAdmin)
                            </dt>

                            <dd>
                               @if (Convert.ToBoolean(Model.IstAdmin))
                               {<div><i class="glyphicon glyphicon-ok"></i></div> }
                               else
                               {
                                <div><i class="glyphicon glyphicon-remove"></i></div>
                               }
                            </dd>
                          
                        </dl>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-4 col-md-offset-4 text-center">
        <ul class="list-unstyled list-inline ">
            <li>
                <a class="btn btn-default" id="btnEdit" href="@Url.Action("Edit", "Benutzer", new {id = Model.BenutzerId})" >
                    <i class="glyphicon glyphicon-pencil"></i> Bearbeiten
                </a>
            </li>
            <li>
                <a class="btn btn-default" id="btnZurück" href="/Benutzer/index"><i class="glyphicon glyphicon-backward"></i> Zurück</a>
            </li>
        </ul>
    </div>
</div>

