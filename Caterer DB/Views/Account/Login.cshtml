@using Caterer_DB.Models
@using Caterer_DB.Resources
@model LoginModel
@{
    ViewBag.Title = "Log in";
}






<br />
<br />
<br />
<br />

<div class="row">
    <div class="col-md-4"></div>
    <div id="LoginPage" class="col-md-4 text-center">
        <h3>Login</h3>
        <div class="col-md-4"></div>
    </div>
</div>
<br />
<section id="loginForm">
    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="col-md-4 col-md-offset-4">

            <div class="form-group">
                <div class="input-group input-group">
                    <span class="input-group-addon"><i style="font-size:25px;" class="glyphicon glyphicon-user "></i></span>
                    <div class="icon-addon addon">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "E-Mail" })
                    </div>
                </div>
                <div class="text-center">
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>

            </div>
        </div>
        <br />
        <br />
        <br />

        <div class="col-md-4 col-md-offset-4">
            <div class="form-group">
                <div class="input-group input-group">
                    <span class="input-group-addon"><i style="font-size:25px;" class="glyphicon glyphicon-lock"></i></span>
                    <div class="icon-addon addon-sm">
                        @Html.PasswordFor(m => m.Passwort, new { @class = "form-control", placeholder = "Passwort" })

                    </div>
                </div>
                <div class="text-center">
                    @Html.ValidationMessageFor(m => m.Passwort, "", new { @class = "text-danger", id = "error1" })
                    @Html.ValidationSummary(true, "", new { @class = "text-danger", id = "error2" })
                </div>


            </div>
        </div>

        <br />
        <br />
        <br />
        <div class="row">
            <div class="col-md-5"></div>
            <div type="button" class="col-md-2 text-center"><input type="submit" value="Anmelden" class="btn btn-primary btn-block btn-xs" /></div>
            <div class="col-md-5"></div>
        </div>
    }
</section>


<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <ul class="nav nav-pills nav-justified">
            <li role="presentation" class="enabled"><a id="PWVergessen" href="/Account/PasswordRequest">Passwort vergessen</a></li>
        </ul>
    </div>
    <div class="col-md-4"></div>
</div>
<br />
<br />
<br />
<br />

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

















