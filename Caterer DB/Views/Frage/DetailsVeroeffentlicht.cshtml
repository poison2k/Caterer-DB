@using Caterer_DB.Models
@model DetailsFrageViewModel

@{
    ViewBag.Title = "Details";
}

<br />
<br />
<br />

<div class="row">
    <div id="RegSeite" class="col-md-6 col-md-offset-3 text-center">
        <h1>Detailansicht Veröffentlichte Frage</h1>
    </div>
</div>
<br />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x=>x.FrageId)
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="row">
                <div class="col-md-12">
                    <div class="well well-lg">
                        <div>
                            <dl class="text-center">

                                <dd>
                                    @Html.DisplayFor(model => model.Bezeichnung)
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="row">
                <div class="col-md-12">
                    <div class="well well-lg">
                        <div>
                            <dl class="text-center">
                                @for (int i = 0; i< Model.Antworten.Count; i++)
                                {
                                    @Html.HiddenFor(x => x.Antworten[i].AntwortId)
                                    <dd>
                                        @Html.DisplayFor(x => x.Antworten[i].Bezeichnung)
                                    </dd>
                                    <hr />
                                }
                            </dl>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4 col-md-offset-4 text-center">
            <ul class="list-unstyled list-inline ">
                <li>
                    <button id="LöschenButton" type="button" class="btn btn-success" data-toggle="modal" data-target="#deleteModal">
                        <i class="glyphicon glyphicon-trash"></i> Frage löschen
                    </button>
                </li>
                <li>
                    <a class="btn btn-default" id="btnZurück" href="@Url.Action("IndexVeroeffentlicht", "Frage", new { id = Model.FrageId })"><i class="glyphicon glyphicon-backward"></i> Zurück</a>
                </li>
            </ul>
        </div>
    </div>
 <!-- Modal -->
    <div class="modal fade" id="deleteModal" role="dialog">
        <div class="modal-dialog modal-sm">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button id="LöschenCancel" type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 id="LöschenBest" class="modal-title">Löschen bestätigen</h4>
                </div>
                <div class="modal-body">
                    <p>Wollen Sie diese Frage wirklich löschen?</p>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success" id="btnModalDelete" name="btnModalDelete" value="Delete">Ja</button>
                    <button type="submit" class="btn btn-success" data-dismiss="modal" id="btnModalCancel" name="btnModalCancel" value="Cancel">Nein</button>
                </div>
            </div>
        </div>
    </div>
}

