@using Caterer_DB.Models
@model CreateKategorieViewModel

@{
    ViewBag.Title = "Create";
}

<br />
<br />
<br />
<div class="row">
    <div id="CatererBearbeitenSeite" class="col-md-6 col-md-offset-3 text-center">
        <h1>Kategorie hinzufügen</h1>
    </div>
</div>
<br />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <div class="well well-lg">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group ">
                            @Html.LabelFor(model => model.Bezeichnung, htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.Bezeichnung, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Bezeichnung, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-2 col-md-offset-2">
            <button type="submit" id="btnKategorieAnlegen" value="Kategorie anlegen" class="btn btn-default btn-block">
                <i class="glyphicon glyphicon-ok"></i> Kategorie anlegen
            </button>
        </div>
        <div class="col-md-2">
            <a class="btn btn-default btn-block" id="btnZurück" href="@Url.Action("Index", "Kategorie")"><i class="glyphicon glyphicon-backward"></i> Zurück</a>
        </div>
    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
